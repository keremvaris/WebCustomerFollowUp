        <div class="editor-label">
            @Html.LabelFor(model => model.musid, "Customer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("musid", String.Empty)
            @Html.ValidationMessageFor(model => model.musid)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.birimfiyat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.birimfiyat)
            @Html.ValidationMessageFor(model => model.birimfiyat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.miktar)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.miktar)
            @Html.ValidationMessageFor(model => model.miktar)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.stokid, "stok")
        </div>
        <div class="editor-field">
            @Html.DropDownList("stokid", String.Empty)
            @Html.ValidationMessageFor(model => model.stokid)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.toplam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.toplam)
            @Html.ValidationMessageFor(model => model.toplam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Alınan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Alınan)
