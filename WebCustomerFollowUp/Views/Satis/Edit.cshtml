        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.alacak)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.alacak)
            @Html.ValidationMessageFor(model => model.alacak)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SatisTarihi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SatisTarihi)
            @Html.ValidationMessageFor(model => model.SatisTarihi)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>
